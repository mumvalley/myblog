<!-- ログインするページ -->

<div class="text-center">
    <div class="form-signin">
      <h1 class="h3 m-3 font-weight-normal">ログインするページ</h1>
        <%= form_for(:session, url: login_path) do |f| %>
          <%= render 'shared/error_messages'%>

         <%= f.label :email, :class => "mt-1" %>
         <%= f.email_field :email, :class => "form-control", :placeholder => "メアドの入力" %>

         <%= f.label :password, :class => "mt-1" %>
         <%= f.password_field :password, :class => "form-control", :placeholder => "パスワードの入力" %>

         <div class="checkbox mt-3 text-left">
           <label>
             <input type="checkbox" value="remember-me"> ログイン状態の保持する
           </label>
         </div>

         <%= f.submit "ログイン", class: "mt-3 btn btn-md btn-primary btn-block" %>
     <% end %>
     <p class="mt-3">初めてのご利用ですか？<%= link_to "サインアップはこちら", new_user_path %></p>
    </div>
</div>
