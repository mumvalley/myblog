<!-- ヘッダー -->
<header class="blog-header py-3 bg-transparent">
  <div class="row flex-nowrap justify-content-between align-items-center">
    <div class="col-4 pt-1">
      <%= link_to 'シンプルブログ', "#", class: "text-muted" %>
    </div>
    <div class="col-4 text-center">
      <a class="blog-header-logo text-dark" href="#">LOGO</a>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <%= link_to "投稿", new_board_path, class: "btn btn-sm btn-outline-secondary" %>
      <%= link_to "Sign up", "#", class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>
<!-- ナビバー -->
<div class="nav-scroller py-1 mb-2">
  <nav class="nav d-flex justify-content-between">
    <%= link_to 'このサイトについて', "#", class: "p-2 text-muted" %>
    <%= link_to 'フォロー', "#", class: "p-2 text-muted" %>
    <%= link_to 'お気に入り', "#", class: "p-2 text-muted" %>
  </nav>
</div>
<!-- トップ -->
<div id="top" class="jumbotron p-3 p-md-5 text-dark rounded bg-white">
  <div class="col-md-6 px-0">
    <h1 class="display-4 font-weight-bold">トップページ</h1>
    <p class="lead my-3">よろしく</p>
  </div>
</div>
<!-- 投稿一覧 -->
<% @board.each do |board| %>
  <div class="row mb-2">
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 shadow-sm h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2 text-primary">タグ表示</strong>
          <h3 class="mb-0">
            <%= link_to board.title, "#", class: "text-dark" %>
          </h3>
          <div class="mb-1 text-muted"><%= board.created_at %></div>
          <p class="card-text mb-auto">イメージ表示</p>
          <a href="#">Continue reading</a>
        </div>
      </div>
    </div>
  <% end %>
