<div class="d-flex align-items-center mt-4 mb-4">
    <div class="ml-auto posts_button">
        <%= link_to "投稿一覧", boards_path, class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "編集", edit_board_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
</div>

<div class="card">
  <div class="card-header  text-center">
      <h4><%= @board.title %></h4>
  </div>
  <div class="card-body">
      <p class="card-text text-center"><%= @board.body %></p>
      <%= link_to "削除", @board, class: "btn btn-sm float-right btn-outline-secondary", method: :delete, data: {confirm: "本当に#{@board.title}を削除してもよろしいですか？", cancel: "キャンセル", commit: "削除", title: "削除の確認"} %>
  </div>
</div>
