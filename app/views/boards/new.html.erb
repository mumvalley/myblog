<div class="m-1 d-flex align-items-center">
  <h1>投稿</h1>
  <div class="ml-auto posts_button">
      <%= link_to "Top", boards_path, class: "btn btn-outline-info" %>
  </div>
</div>

<%= form_with model: @board do |f| %>
    <div class="mx-2 form-group">
        <%= f.label :title, '投稿タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
        <small id="title-tip" class="form-text text-muted">
            タイトルを入力してください。
        </small>
    </div>
    <div class=" mx-2 form-group">
        <%= f.label :body, '投稿内容' %>
        <%= f.text_area :body, class: 'form-control', rows:10 %>
        <small id=content-tip" class="form-text text-muted">
            投稿内容を入力してください。
        </small>
    </div>
    <%= f.submit '投稿', class: ' mx-2 btn btn-info btn-block' %>
    <small id="submit-tip" class=" mx-2 form-text text-muted">
        投稿する前に投稿内容を見直してください!
    </small>
<% end %>
