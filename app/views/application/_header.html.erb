<!-- ヘッダー -->
<header class="blog-header py-3 bg-transparent">
  <div class="row flex-nowrap justify-content-center align-items-center">
    <div class="col-4 pt-1">
      <%= link_to '三', boards_path, class: "text-muted" %>
    </div>
    <div class="col-4 text-center">
      <%= link_to 'Blog', boards_path, class: "blog-header-logo sticky-top" %>
    </div>
    <div class="col-4 d-flex justify-content-end align-items-center">
      <div class="btn-group">
        <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-toggle="dropdown">サイン</button>
        <div class="dropdown-menu dropdown-menu-right">
          <% if logged_in? %>
          <%= link_to "ログアウト", logout_path, class: "dropdown-item btn-sm", method: :delete %>
          <% else %>
          <%= link_to "ログイン", login_path, class: "dropdown-item btn-sm" %>
          <%= link_to "サインアップ", new_user_path, class: "dropdown-item btn-sm" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<!-- ナビバー -->
<div class="nav-scroller py-1 mb-2">
  <nav class="nav d-flex justify-content-start">
    <%= link_to 'プロフィール', "/users/2", class: "p-2 text-muted" %>
    <%= link_to 'フォロー', "#", class: "p-2 text-muted" %>
    <%= link_to 'タグ', "#", class: "p-2 text-muted" %>
  </nav>
</div>
